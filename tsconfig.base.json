{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env": ["environments/environment"],
      "@joke/web-jokes-domain-types": [
        "libs/web/jokes/domain-types/src/index.ts"
      ],
      "@joke/web-jokes-feature": ["libs/web/jokes/feature/src/index.ts"],
      "@joke/web-shell": ["libs/web/shell/src/index.ts"],
      "@joke/web-ui-styles": ["libs/web/ui/styles/src/index.ts"],
      "@joke/web/jokes/data-access-jokes": [
        "libs/web/jokes/data-access-jokes/src/index.ts"
      ],
      "@joke/web/jokes/ui/joke-card": [
        "libs/web/jokes/ui/joke-card/src/index.ts"
      ],
      "@joke/web/jokes/ui/joke-view": [
        "libs/web/jokes/ui/joke-view/src/index.ts"
      ],
      "@joke/web/ui/nav": ["libs/web/ui/nav/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
