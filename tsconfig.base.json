{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@joke/web-feature-jokes": ["libs/web/feature-jokes/src/index.ts"],
      "@joke/web/shared/domain/interfaces": [
        "libs/web/shared/domain/interfaces/src/index.ts"
      ],
      "@joke/web/shared/shell": ["libs/web/shared/shell/src/index.ts"],
      "@joke/web/shared/ui/styles": ["libs/web/shared/ui/styles/src/index.ts"],
      "@joke/web/ui/nav": ["libs/web/ui/nav/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
